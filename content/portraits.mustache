<section class="portraits">
  <h2 class="section-title">Halftone &amp; pixel portraits</h2>

  <div class="grid">
    <div class="figure grid__half grid__half--alpha">
      {{#portrait_gifs.angelis}}
        {{> gif_player}}
      {{/portrait_gifs.angelis}}
    </div>
    <div class="figure grid__half grid__half--beta">
      {{#portrait_gifs.bands}}
        {{> gif_player}}
      {{/portrait_gifs.bands}}
    </div>

    <div class="figure grid__half grid__half--alpha">
      {{#portrait_gifs.shelby}}
        {{> gif_player}}
      {{/portrait_gifs.shelby}}
    </div>
    <div class="figure grid__half grid__half--beta">
      {{#portrait_gifs.boca_raton}}
        {{> gif_player}}
      {{/portrait_gifs.boca_raton}}
    </div>

    <div class="figure grid__half grid__half--alpha">
      {{#portrait_gifs.louise}}
        {{> gif_player}}
      {{/portrait_gifs.louise}}
    </div>

    <div class="figure grid__half grid__half--beta">
      <img data-lazy="9x16" data-src="img/portraits/shari.png" alt="Shari pixelated" />
      <p class="caption">Photo</p>
    </div>

    <div class="figure grid__half grid__half--alpha">
      <img data-lazy="2x3" data-src="img/portraits/gavin.png" alt="Gavin pixelated" />
      <p class="caption">Photo</p>
    </div>

    <div class="figure grid__half grid__half--beta">
      <img data-lazy="2x3" data-src="img/portraits/stanley.png" alt="Stanley pixelated" />
      <p class="caption">Photo</p>
    </div>

    <div class="figure grid__half grid__half--alpha">
      <img data-lazy="9x16" data-src="img/portraits/take-my-picture.png" alt="Pixelated portrait" />
      <p class="caption">Photo</p>
    </div>

    <div class="figure grid__half grid__half--beta">
      {{#portrait_gifs.self_fri_halo}}
        {{> gif_player}}
      {{/portrait_gifs.self_fri_halo}}
    </div>

  </div>

</section>